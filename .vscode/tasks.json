{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [        
        "$tsc",
        "$tslint5"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run tests",
      "type": "npm",
      "script": "test",
      "problemMatcher": []
    },
    {
      "label": "Format code",
      "type": "npm",
      "script": "format",
      "problemMatcher": []
    }
  ]
}